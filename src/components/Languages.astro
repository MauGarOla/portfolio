---
import { LANGUAGES } from '../i18n/ui';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

const currentLocaleData = LANGUAGES[lang]
---
<section class="flex justify-between dark:text-site-50">
    <a href="/en">
        {currentLocaleData.code === 'en' ?
     <h4 class="text-site-200">en</h4> :
     <h4>en</h4>}
    </a>
    <a href="/de" class="mx-4">
        {currentLocaleData.code === 'de' ?
     <h4 class="text-site-200">de</h4> :
     <h4>de</h4>}
    </a>
    <a href="/es">
        {currentLocaleData.code === 'es' ?
     <h4 class="text-site-200">es</h4> :
     <h4>es</h4>}
    </a>
</section>
